<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane fx:id="rootPane"
    xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="Controle.BruitageController"
    stylesheets="@style.css">

    <center>
        <BorderPane fx:id="centerPane" styleClass="center-pane">
            <top>
                <Label text="Bruitage :"
                    styleClass="label-bruitage-titre"
                    BorderPane.alignment="CENTER" />
            </top>

            <center>
                <StackPane fx:id="imageContainer" styleClass="image-container">
                    <ScrollPane fitToWidth="true" fitToHeight="true"
                        pannable="true" styleClass="scrollpane-transparent">
                        <StackPane alignment="CENTER">
                            <ImageView fx:id="imageView" preserveRatio="true"
                                fitWidth="800" fitHeight="500" />
                        </StackPane>
                    </ScrollPane>
                </StackPane>
            </center>

            <left>
                <VBox spacing="20">
                    <HBox alignment="TOP_LEFT">
                        <Button text="⬅ Retour en arrière"
                            onAction="#handleRetourMenu"
                            styleClass="button-retour-menu"
                            prefHeight="40" />
                    </HBox>

                    <Region VBox.vgrow="ALWAYS" />

                    <HBox spacing="10" alignment="CENTER">
                        <Label text="Valeur :" styleClass="slider-label" />
                        <Label fx:id="labelValeur" text="0"
                            styleClass="slider-label" />
                    </HBox>

                    <Slider fx:id="sliderV" min="0" max="100" value="0"
                        blockIncrement="1" majorTickUnit="20" minorTickCount="4"
                        showTickLabels="true" showTickMarks="true"
                        styleClass="slider-v" />

                    <Region VBox.vgrow="ALWAYS" />
                </VBox>
            </left>

            <bottom>
                <HBox alignment="CENTER" spacing="20">
                    <Button text="Bruiter" fx:id="boutonBruiter"
                        onAction="#handleBruiter"
                        styleClass="button-bruiter"
                        prefWidth="250" prefHeight="50" />

                    <Button text="Méthodes ➔" fx:id="boutonMethodes"
                        styleClass="button-methodes"
                        prefWidth="250" prefHeight="50" 
                        onAction="#handleAllerMethodes"/>
                </HBox>
            </bottom>

        </BorderPane>
    </center>

</BorderPane>
