<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<BorderPane fx:id="rootPane"
	xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="Controle.BruitageController">

	<center>
		<BorderPane fx:id="centerPane" style="-fx-padding: 30;">
			<top>
				<Label text="Bruitage :"
					style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-underline: true;"
					BorderPane.alignment="CENTER" />
			</top>
			<center>
				<StackPane fx:id="imageContainer"
					style="-fx-border-color: black; -fx-border-width: 1;">
					<ScrollPane fitToWidth="true" fitToHeight="true"
						pannable="true" style="-fx-background-color:transparent;">
						<StackPane alignment="CENTER">
							<ImageView fx:id="imageView" preserveRatio="true"
								fitWidth="800" fitHeight="500" />
						</StackPane>
					</ScrollPane>
				</StackPane>
			</center>
			<left>
				<VBox spacing="20">
					<!-- Menu principal aligné en haut à gauche -->
					<HBox alignment="TOP_LEFT">
						<Button text="⬅ Menu principal"
							onAction="#handleRetourMenu"
							style="-fx-background-color: #a54dff; -fx-text-fill: black; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 20;"
							prefWidth="160" prefHeight="40" />
					</HBox>

					<!-- Espace flexible pour pousser le slider au centre -->
					<Region VBox.vgrow="ALWAYS" />

					<!-- Slider centré -->
					<HBox spacing="10" alignment="CENTER">
						<Label text="Valeur :" style="-fx-font-size: 18px;" />
						<Label fx:id="labelValeur" text="0"
							style="-fx-font-size: 18px;" />
					</HBox>
					<Slider fx:id="sliderV" min="0" max="100" value="0"
						blockIncrement="1" majorTickUnit="20" minorTickCount="4"
						showTickLabels="true" showTickMarks="true"
						style="-fx-padding: 10; -fx-background-color: #e2d5ff; -fx-background-radius: 5;" />

					<!-- Espace flexible pour recentrer verticalement -->
					<Region VBox.vgrow="ALWAYS" />
				</VBox>
			</left>
			<bottom>
				<HBox alignment="CENTER" spacing="20">
					<Button text="Bruiter" fx:id="boutonBruiter"
						onAction="#handleBruiter"
						style="-fx-background-color: black; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 20px; -fx-background-radius: 30;"
						prefWidth="250" prefHeight="50" />

					<Button text="Méthodes ➔" fx:id="boutonMethodes"
						style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 20px; -fx-background-radius: 30;"
						prefWidth="250" prefHeight="50" />
						<!--onAction="#handleAllerMethodes" -->
				</HBox>
			</bottom>
		</BorderPane>
	</center>

</BorderPane>
