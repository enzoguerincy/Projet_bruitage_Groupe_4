<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.canvas.Canvas?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controle.ResultatController"
            stylesheets="@style.css">

    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 20;">
            <StackPane fx:id="imageContainer"
                       alignment="CENTER"
                       style="-fx-background-color: white; -fx-border-color: lightgray;">
                <Canvas fx:id="canvas" width="800" height="500"
                        StackPane.alignment="CENTER" />
            </StackPane>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="20" style="-fx-padding: 20;">
            <Slider fx:id="comparaisonSlider" min="0" max="1" value="0.5"
                    blockIncrement="0.01" styleClass="slider-v"
                    prefWidth="400" onMouseDragged="#handleSliderChanged" />
            <Button fx:id="boutonAjouter" text="Ajouter Ã  la collection"
                    onAction="#handleAjouterCollection"
                    styleClass="button-small" />
        </HBox>
    </bottom>

</BorderPane>
